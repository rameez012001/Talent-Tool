<mvc:View
		class="sapUiSizeCompact"
		controllerName="talentoolui.controller.Header"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
        xmlns:tnt="sap.tnt">
    	<ScrollContainer vertical="true" height="100%">
		<tnt:ToolHeader id="shellLikeToolHeader" class="sapUiTinyMargin">
			<Image src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse4.mm.bing.net%2Fth%2Fid%2FOIP.a2nIqtkHeTVqeqiX0gvSeQHaHa%3Fpid%3DApi&amp;f=1&amp;ipt=92eaee13ddfbeb3543b0dc9e8e517d443c78f7c6862a002589756ca23351025c&amp;ipo=images" decorative="false" press="onLogoPressed" tooltip="Talent tool Logo" width="60px" height="60px">
				<layoutData>
					<OverflowToolbarLayoutData priority="NeverOverflow"/>
				</layoutData>
			</Image>
			<Title text="Talent Tool" wrapping="false" id="titleName">
				<layoutData>
					<OverflowToolbarLayoutData priority="Disappear"/>
				</layoutData>
			</Title>
			<!-- <Text text="" wrapping="false" id="secondTitle">
				<layoutData>
					<OverflowToolbarLayoutData priority="Disappear"/>
				</layoutData>
			</Text> -->
			<ToolbarSpacer />
			<SearchField
                    width="25rem"
                    placeholder="Search Assets, Maintenance, Users"
                    liveChange=".onGlobalSearch"/>
			<tnt:ToolHeaderUtilitySeparator/>
			<Avatar
					displaySize="XS"
					backgroundColor="Random"/>
		</tnt:ToolHeader>
	</ScrollContainer>
</mvc:View>