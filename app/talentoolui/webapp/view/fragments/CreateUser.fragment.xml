<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="userDialog"
        title="Create User"
        draggable="true"
        resizable="true">

        <VBox class="sapUiSmallMargin">

            <Label text="User ID"/>
            <Input
                id="userId"
                placeholder="Enter ID"/>

            <Label text="Name"/>
            <Input
                id="userName"
                placeholder="Enter Name"/>

            <Label text="Email"/>
            <Input
                id="userEmail"
                placeholder="Enter Email"/>
            
            <Select id="userDept" selectedKey="SDE">
                <items>
                    <core:Item text="IT" key="IT"/>
                    <core:Item text="SDE" key="SDE"/>
                </items>
            </Select>
            
        </VBox>

        <beginButton>
            <Button
                text="Create"
                type="Emphasized"
                press="onCreateUser"/>
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press="onCloseDialog"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>
