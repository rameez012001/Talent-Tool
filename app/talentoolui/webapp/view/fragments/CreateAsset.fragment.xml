<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="assetDialog"
        title="Create User"
        draggable="true"
        resizable="true">

        <VBox class="sapUiSmallMargin">

            <Label text="Asset Name"/>
            <Input
                id="assetTag"
                placeholder="Enter ID"/>

            <Label text="Name"/>
            <Input
                id="deviceId"
                placeholder="Asset ID"/>
            
            <Label text="Status"/>
            <Select id="status" selectedKey="AVAILABLE">
                <items>
                    <core:Item text="AVAILABLE" key="AVAILABLE"/>
                    <core:Item text="IN_USE" key="IN_USE"/>
                    <core:Item text="MAINTENANCE" key="MAINTENANCE"/>
                    <core:Item text="RETIRED" key="SDE"/>
                </items>
            </Select>
            
        </VBox>

        <beginButton>
            <Button
                text="Create"
                type="Emphasized"
                press="onCreateAsset"/>
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press="onCloseDialog"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>
