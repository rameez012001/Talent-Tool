<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<QuickView
		id="quickUserView"
		pages="{
			path: '/pages',
			templateShareable: true
			}"
		navigate=".onNavigate">
		<QuickViewPage
			pageId="{pageId}"
			header="Employee Card"
			title="{name}"
			description="Software Engineer">
			<avatar>
				<Avatar
                    initials="{name}"
                    displaySize="XL"
                    backgroundColor="Accent1"/>
			</avatar>
			<QuickViewGroup heading="{heading}" elements="{ path: 'elements', templateShareable: true }">
				<QuickViewGroupElement
					label="{label}"
					value="{value}"
					url="{url}"
					type="{elementType}"
					emailSubject="{email}"/>
			</QuickViewGroup>
		</QuickViewPage>
	</QuickView>
</core:FragmentDefinition>
