<mvc:View
    class="sapUiSizeCompact"
    controllerName="talentoolui.controller.AssetMaintenance"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Table
        id="MaintenanceRequests"
        growing="true"
        growingThreshold="10"
        items="{/MaintenanceRequests}">

        <headerToolbar>
            <Toolbar>
                <Title text="Maintenance Requests" level="H2"/>
                <ToolbarSpacer/>
                <Button
                    icon="sap-icon://add"
                    text="Create"
                    tooltip="Create Maintenance Request"
                    press=".onCreateRequest"/>
            </Toolbar>
        </headerToolbar>

        <columns>
            <Column>
                <Text text="Title"/>
            </Column>

            <Column>
                <Text text="Description"/>
            </Column>

            <Column>
                <Text text="Status"/>
            </Column>

            <Column hAlign="Center">
                <Text text="Priority"/>
            </Column>

            <Column hAlign="Center">
                <Text text="Asset"/>
            </Column>

            <Column hAlign="Center">
                <Text text="Technician"/>
            </Column>
        </columns>

        <items>
            <ColumnListItem type="Navigation" press=".onRequestItemPressed">
                <cells>
                    <Text text="{title}"/>
                    <Text text="{description}"/>
                    <ObjectStatus
                        text="{status}"
                        state="{= ${status} === 'OPEN' ? 'Warning' : 'Success' }"/>
                    <ObjectStatus
                        text="{priority}"
                        state="{= ${status} === 'HIGH' ? 'Warning' : 'Success' }"/>                        
                    <Text text="{assetName}"/>
                    <Text text="{= ${technicianName} ? ${technicianName} : 'Not yet Assigned' }"/>
                </cells>
            </ColumnListItem>
        </items>

    </Table>
</mvc:View>
