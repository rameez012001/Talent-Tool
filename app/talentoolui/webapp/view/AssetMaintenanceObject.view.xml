		xmlns:m="sap.m"
		controllerName="talentoolui.controller.AssetMaintenanceObject"
		height="100%">

	<ObjectPageLayout id="MainteanceObjectLayout" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageHeader id="MainteananceObject"
							  objectTitle="{title}"
							  objectSubtitle="Maintenance Request">
				<actions>
					<m:Button icon="sap-icon://add-employee" id="assignBtn" text="Assign Technician" press="openUserDialog" tooltip="Assign Technician"/>
					<m:Button icon="sap-icon://complete" id="fixedBtn" text="Fixed" tooltip="mark as fixed" press="onFixed"/>		
					<m:Button icon="sap-icon://save" text="save" visible="false" tooltip="save"/>
					<m:Button icon="sap-icon://refresh" text="{buttons>/text}" tooltip="refresh"/>
					<m:Button icon="{buttons>/icon}"
												  text="{path:'/text', model:'buttons', formatter:'.onFormat'}" tooltip="chain-link"/>
				</actions>
			</ObjectPageHeader>
		</headerTitle>
		<headerContent>
			<layout:VerticalLayout>
				<m:ObjectStatus title="Title" text="{title}"/>
				<m:ObjectStatus title="Description" text="{description}"/>
				<m:ObjectStatus title="Asset" text="{assetName}"/>
				<m:ObjectStatus title="Technician" text="{technicianName}"/>
			</layout:VerticalLayout>
			<m:ObjectStatus title="Priority" text="{priority}" state="{ path:'priority', formatter:'.reqPriorityState' }"/>
			<m:ObjectStatus title="Status" text="{status}" state="{ path:'status', formatter:'.reqStatusState' }"/>

		</headerContent>
